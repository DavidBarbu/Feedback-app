<%- include('header') -%>

    <div class="text-center center-div mt-5" id="login">
        <div class="container w-25 border py-5 mt-5">
            <h3>Editati studentul:</h3>
            <h3>
                <%= body.firstName%>
                    <%= body.lastName%>
            </h3>
            <form action="/route/editStudent/<%= body.id%>" method="POST" class="pt-3">
                <div class="form-group">
                    <br>

                    <div>


                        <p>Nume de familie: <%= body.firstName %>
                                <input type="text" name="firstName" class="form-control">

                        </p>

                        <p>Prenume: <%= body.lastName %>
                                <input type="text" name="lastName" class="form-control">

                        </p>

                        <p>Email: <%= body.email %>
                                <input type="text" name="email" class="form-control">

                        </p>

                        <p>Grupa: <%= body.class %>
                                <input type="text" name="class" class="form-control">

                        </p>

                        <p>An: <%= body.year %>
                                <input type="text" name="year" class="form-control">

                        </p>

                    </div>

                </div>
                <button type="submit" class="btn btn-success rounded-pill">Submit</button>

                <a href="/route/deleteStudent/<%= body.id%>" class="btn btn-success rounded-pill">Sterge student</a>
                <a href="/route/db" class="btn btn-success rounded-pill">Inapoi</a>
                <a href="/route/Logout" class="btn btn-success rounded-pill">Logout</a>
        </div>
    </div>

    <%- include('footer') -%>